<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- FIXED: Info row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/order_table"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Bàn 1"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/order_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="đang phục vụ"
                android:textSize="16sp"
                android:textColor="#FF9800"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng: "
                android:textSize="16sp" />

            <TextView
                android:id="@+id/order_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="35.000đ"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#4CAF50" />

        </LinearLayout>

        <!-- FIXED: Buttons row - Use horizontal LinearLayout with weight to avoid overflow -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:gravity="end">

            <Button
                android:id="@+id/btn_them_mon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Thêm món"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#2196F3"
                android:visibility="gone" />  <!-- FIXED: Default gone, show in code -->

            <Button
                android:id="@+id/btn_thu_tien"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Thu tiền"
                android:backgroundTint="?attr/colorPrimary"
                android:layout_marginStart="8dp" />  <!-- FIXED: Remove large marginStart, use weight -->

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>