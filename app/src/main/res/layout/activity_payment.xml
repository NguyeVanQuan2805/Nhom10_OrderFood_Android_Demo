<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.PaymentActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thu tiền"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp" />

        <TextView
            android:id="@+id/tv_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tổng tiền"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/tv_total_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="35.000đ"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#4CAF50"
            app:layout_constraintStart_toStartOf="@id/tv_total"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_total" />

        <TextView
            android:id="@+id/tv_tien_khach_tra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tiền khách trả"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_total"
            android:layout_marginTop="24dp" />

        <!-- THÊM: EditText nhập tiền tùy chỉnh -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_paid_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Nhập số tiền (VND)"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_tien_khach_tra">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_paid_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:text="0"
                android:textSize="16sp"
                tools:text="120000" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tv_tra_lai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tiền thừa"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/til_paid_amount"
            android:layout_marginTop="24dp" />

        <TextView
            android:id="@+id/tv_tra_lai_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0đ"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#4CAF50"
            app:layout_constraintStart_toStartOf="@id/tv_tra_lai"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_tra_lai" />

        <Button
            android:id="@+id/btn_hoan_thanh"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:text="HOÀN THÀNH"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="#4CAF50"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_tra_lai"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
